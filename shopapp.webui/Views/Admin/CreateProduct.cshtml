@model ProductModel

<h1 class="h3">Create Product</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form asp-contoller="admin" asp-action="CreateProduct" method="POST">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input  class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="text" class="form-control" asp-for="Url">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input  class="form-control" asp-for="Price">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea type="text" class="form-control" asp-for="Description"></textarea>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </form>
    </div>
</div>